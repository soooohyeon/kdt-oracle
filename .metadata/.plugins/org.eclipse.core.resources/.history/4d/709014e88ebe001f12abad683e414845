-- 2. 집합, 형변환 함수

-- 집합
-- 결과 6개 행
SELECT * FROM EMP e
WHERE DEPTNO = 30;

-- 결과 3개 행
SELECT * FROM EMP e
WHERE DEPTNO = 10;

-- EMP 테이블에서 DEPTNO가 30 또는 10인 데이터 조회
-- 두 테이블을  UNION(합칩합)으로 연결
SELECT * FROM EMP e
WHERE DEPTNO = 30
UNION ALL
SELECT * FROM EMP
WHERE DEPTNO = 10

-- EMP 테이블에서 SAL 1000 이상 2000이하, 1500 이상 3000 이하의 결과 같이 조회
SELECT * FROM EMP e
WHERE SAL BETWEEN 1000 AND 2000
UNION ALL
SELECT * FROM EMP e2
WHERE SAL BETWEEN 1500 AND 3000;

-- 형 변환 함수


