-- 보호자
CREATE TABLE TBL_PERSON (
	PERSON_ID NUMBER,
	PERSON_NAME VARCHAR2(100) NOT NULL,
	PERSON_ADDRESS VARCHAR2(100) NOT NULL,
	PERSON_PHONE VARCHAR2(100) NOT NULL UNIQUE,
	PERSON_EMAIL VARCHAR2(100) NOT NULL UNIQUE,
	CONSTRAINT PK_PERSON PRIMARY KEY (PERSON_ID)
);

CREATE TABLE TBL_SPECIES (
	TBL_SPECIES
	SPECIES_ID NUMBER,
	SPECIES_NAME VARCHAR2(100)	N/N, UNIQUE
);


-- 각 테이블의 시퀀스 생성
CREATE SEQUENCE TBL_PERSON;
CREATE SEQUENCE SEQ_SUBJECT;
CREATE SEQUENCE SEQ_TEACHER;
CREATE SEQUENCE SEQ_CLASS;