CREATE TABLE TBL_MEMBER (
		MEMBER_NUMBER NUMBER,
		MEMBER_NAME VARCHAR2(1000) NOT NULL,
		MEMBER_AGE NUMBER NOT NULL,
		MEMBER_PHONE VARCHAR2(1000) NOT NULL,
		MEMBER_ADDRESS VARCHAR2(1000) NOT NULL,
		CONSTRAINT PK_MEMBER PRIMARY KEY (MEMBER_NUMBER)
	);

CREATE TABLE TBL_GENRE (
		GENRE_NUMBER NUMBER,
		GENRE_NAME VARCHAR2(1000) NOT NULL,
		CONSTRAINT PK_GENRE PRIMARY KEY (GENRE_NUMBER)
	);

CREATE TABLE TBL_BOOK (
		BOOK_NUMBER NUMBER,
		BOOK_NAME VARCHAR2(1000) NOT NULL,
		GENRE_NUMBER NUMBER,
		MEMBER_NUMBER NUMBER,
		CONSTRAINT PK_BOOK PRIMARY KEY (BOOK_NUMBER),
		CONSTRAINT FK_BOOK_GENRE FOREIGN KEY (GENRE_NUMBER) REFERENCES TBL_GENRE(GENRE_NUMBER),
		CONSTRAINT FK_BOOK_MEMBER FOREIGN KEY (MEMBER_NUMBER) REFERENCES TBL_MEMBER(MEMBER_NUMBER)
	);
	
SELECT * FROM TBL_MEMBER;
SELECT * FROM TBL_GENRE;
SELECT * FROM TBL_BOOK;

DROP TABLE TBL_MEMBER;
DROP TABLE TBL_GENRE;
DROP TABLE TBL_BOOK;