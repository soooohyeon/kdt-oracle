-- 1. JOIN - INNER

-- 도서테이블과 도서가격 테이블 생성
CREATE TABLE TBL_BOOKS(
	BOOK_ID NUMBER,
	BOOK_TITLE VARCHAR2(1000),
	BOOK_AUTHOR VARCHAR2(100),
	CONSTRAINT PK_BOOK PRIMARY KEY (BOOK_ID)
);

CREATE TABLE TBL_BOOKPRICE(
	BP_ID NUMBER,
	BP_PRICE NUMBER,
	CONSTRAINT BP_PK PRIMARY KEY(BP_ID)
);

INSERT INTO TBL_BOOKS
